<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider_horizontal_1px"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/parameter_list"
                android:textColor="@color/grayer" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:divider="@drawable/divider_horizontal_1px"
                android:orientation="vertical"
                android:showDividers="middle">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@drawable/divider_vertical_1px"
                    android:showDividers="middle">

                    <Button
                        android:id="@+id/button0"
                        style="@style/Widget.Kinco.Button.Category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_general_smaller"
                        android:text="@string/title_general" />

                    <Button
                        android:id="@+id/button1"
                        style="@style/Widget.Kinco.Button.Category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_motor_smaller"
                        android:text="@string/title_motor" />

                    <Button
                        android:id="@+id/button2"
                        style="@style/Widget.Kinco.Button.Category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_vf_smaller"
                        android:text="@string/title_vf" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@drawable/divider_vertical_1px"
                    android:showDividers="middle">

                    <Button
                        android:id="@+id/button3"
                        style="@style/Widget.Kinco.Button.Category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_terminal_smaller"
                        android:drawablePadding="10dp"

                        android:text="@string/title_terminal" />

                    <Button
                        android:id="@+id/button4"
                        style="@style/Widget.Kinco.Button.Category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_control_smaller"
                        android:text="@string/title_control" />

                    <Button
                        android:id="@+id/button5"
                        style="@style/Widget.Kinco.Button.Category"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:visibility="invisible" />
                    <!--            <com.google.android.material.button.MaterialButton-->
                    <!--                app:icon="@drawable/ic_control"-->
                    <!--                app:iconSize="50dp"-->
                    <!--                -->
                    <!--                android:text="@string/OK"/>-->
                </TableRow>

            </TableLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/quick_command"
                android:textColor="@color/grayer" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/divider_horizontal_1px"
                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/quick_btn0"
                        style="@style/Widget.Kinco.QuickButton"
                        android:text="@string/C_110B"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/quick_btn1"
                        style="@style/Widget.Kinco.QuickButton"
                        android:text="@string/C_bit3_0" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/quick_btn2"
                        style="@style/Widget.Kinco.QuickButton"
                        android:text="@string/C_bit9_0"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/quick_btn3"
                        style="@style/Widget.Kinco.QuickButton"
                        android:text="@string/C_101B" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/quick_btn4"
                        style="@style/Widget.Kinco.QuickButton"
                        android:text="@string/C_bit3_1" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/quick_btn5"
                        style="@style/Widget.Kinco.QuickButton"
                        android:text="@string/C_bit9_1"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>