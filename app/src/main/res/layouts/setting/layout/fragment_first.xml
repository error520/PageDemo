<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/myfragment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"
        android:paddingRight="5dp">

        <!--    <View-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="20dp"-->
        <!--        android:background="#DBEEF4" />-->

        <ListView

            android:id="@+id/mylist0"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:divider="@null" />
        <!--            android:layout_height="wrap_content"-->
        <ListView
            android:id="@+id/list_view0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fragment1_text"
            android:descendantFocusability="beforeDescendants"
            android:divider="@null" />
        <!--    <Button-->
        <!--        android:id="@+id/FirstpageSubmit"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:text="Submit"-->
        <!--        tools:layout_editor_absoluteX="153dp"-->
        <!--        tools:layout_editor_absoluteY="170dp"-->
        <!--        />-->

        <TextView
            android:id="@+id/fragment1_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Control_command_word"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/control_bit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bit2~bit10"
            android:textColor="@color/grayer" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <!--       <Button
                       android:id="@+id/control_111B"
                       android:layout_width="fill_parent"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:text="Running command"
                       android:textAllCaps="false"/>
                       -->

            <Button
                android:id="@+id/control_110B"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/C_110B"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/control_101B"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/C_101B"
                android:textAllCaps="false" />

        </LinearLayout>

        <TextView
            android:id="@+id/control_bit3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bit3"
            android:textColor="@color/grayer" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/control_bit3_0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/C_bit3_0"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/control_bit3_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/C_bit3_1"
                android:textAllCaps="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/control_bit9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bit9"
            android:textColor="@color/grayer" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/control_bit9_0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/C_bit9_0"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/control_bit9_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/C_bit9_1"
                android:textAllCaps="false" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#00A7A5A5"

            />

        <Button
            android:id="@+id/FirstpageMore"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/button"
            android:text="@string/More"
            android:textAllCaps="false"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="170dp" />


    </LinearLayout>
</ScrollView>