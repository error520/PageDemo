<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:orientation="vertical"

        android:paddingLeft="@dimen/activity_horizontal_margin"

        android:paddingTop="15dp"

        android:paddingRight="@dimen/activity_horizontal_margin">

        <Button

            android:id="@+id/SecondpageReload"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_margin="3dp"

            android:background="@drawable/button"

            android:text="@string/RELOAD"

            app:layout_constraintEnd_toEndOf="@id/list0"

            app:layout_constraintTop_toBottomOf="@id/list0" />

        <View

            android:layout_width="match_parent"

            android:layout_height="15dp"

            android:background="#00A7A5A5"


            />


        <View

            android:layout_width="match_parent"

            android:layout_height="1dip"

            android:background="#A7A5A5"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"

            />


        <include

            android:id="@+id/table_title"

            layout="@layout/list_title" />


        <View

            android:layout_width="match_parent"

            android:layout_height="1.5dip"

            android:background="#686867"

            />


        <ListView

            android:id="@+id/list0"

            android:layout_width="fill_parent"

            android:layout_height="380dp"

            android:cacheColorHint="@android:color/transparent"

            android:descendantFocusability="beforeDescendants"


            android:divider="#B4B3B3"

            android:dividerHeight="1.0dip"

            android:fadingEdge="none"

            android:scrollbars="none"

            app:layout_constraintEnd_toEndOf="@id/table_title"

            app:layout_constraintTop_toBottomOf="@id/table_title"


            ></ListView>

        <View

            android:layout_width="match_parent"

            android:layout_height="15dp"

            android:background="#00A7A5A5"


            />

        <Button

            android:id="@+id/SecondpageMore"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_margin="3dp"

            android:background="@drawable/button"

            android:text="@string/More"

            app:layout_constraintEnd_toEndOf="@id/list0"

            app:layout_constraintTop_toBottomOf="@id/list0" />


    </LinearLayout></ScrollView>