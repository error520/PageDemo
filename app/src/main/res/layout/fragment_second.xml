<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:paddingLeft="@dimen/activity_horizontal_margin"

        android:paddingRight="@dimen/activity_horizontal_margin"

        android:paddingTop="15dp"

        android:paddingBottom="60dp"

        xmlns:tools="http://schemas.android.com/tools"

        android:orientation="vertical">

        <Button

            android:id="@+id/SecondpageReload"

            android:layout_width="fill_parent"

            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="@id/list0"

            app:layout_constraintTop_toBottomOf="@id/list0"

            android:text="@string/RELOAD"

            android:background="@drawable/button"

            />

        <View

            android:layout_width="match_parent"

            android:layout_height="15dp"

            android:background="#00A7A5A5"



            />



        <View

            android:layout_width="match_parent"

            android:layout_height="1dip"

            android:background="#A7A5A5"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"

            />



        <include

            layout="@layout/list_item1"

            android:id="@+id/table_title"/>



        <View

            android:layout_width="match_parent"

            android:layout_height="1.5dip"

            android:background="#686867"

            />



        <ListView

            android:id="@+id/list0"

            android:divider="#B4B3B3"

            android:dividerHeight="1.0dip"

            android:scrollbars="none"

            android:descendantFocusability="beforeDescendants"



            android:cacheColorHint="@android:color/transparent"

            android:fadingEdge="none"

            android:layout_width="fill_parent"

            android:layout_height="380dp"

            app:layout_constraintEnd_toEndOf="@id/table_title"

            app:layout_constraintTop_toBottomOf="@id/table_title"



            ></ListView>

        <View

            android:layout_width="match_parent"

            android:layout_height="15dp"

            android:background="#00A7A5A5"



            />

        <Button

            android:id="@+id/SecondpageMore"

            android:layout_width="fill_parent"

            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="@id/list0"

            app:layout_constraintTop_toBottomOf="@id/list0"

            android:text="@string/More"

            android:background="@drawable/button"

            />





    </LinearLayout></ScrollView>