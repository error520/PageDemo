<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>#通知栏颜色
        <item name="colorPrimaryDark">@color/colorAccent</item>#导航栏颜色
        <item name="colorAccent">@color/colorAccent</item>#控件选中后颜色
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="editTextColor">@color/black</item>
    </style>

    <style name="Widget.Kinco.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000000</item>
        <item name="backgroundTint">?attr/actionMenuTextColor</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">10dp</item>
        <item name="rippleColor">@color/gray</item>
        <item name="android:layout_margin">3dp</item>
    </style>


</resources>
